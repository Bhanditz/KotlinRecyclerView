<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:auto="http://schemas.android.com/apk/res-auto">
    <item auto:state1="true">
        <shape>
            <solid android:color="@color/dark_red"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item auto:state2="true">
        <shape>
            <stroke android:color="@color/divide" android:width="1dp" android:dashWidth="2dp" android:dashGap="2dp"/>
            <solid android:color="@color/transparent"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <stroke android:color="@color/divide" android:width="1dp"/>
            <solid android:color="@color/transparent"/>
            <corners android:radius="3dp"/>
        </shape>
    </item>
</selector>