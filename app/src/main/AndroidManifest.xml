<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cz.sample">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.adapter.HeaderAdapterActivity" />
        <activity android:name=".ui.adapter.DynamicAdapterActivity" />
        <activity android:name=".ui.recyclerview.PullToRefreshActivity" />
        <activity android:name=".ui.recyclerview.GridPullToRefreshActivity" />
        <activity android:name=".ui.recyclerview.PullToRefreshExpandActivity" />
        <activity android:name=".ui.adapter.TreeAdapterViewActivity" />
        <activity android:name=".ui.drag.LinearDragActivity" />
        <activity android:name=".ui.drag.GridDragActivity" />
        <activity android:name=".ui.drag.DynamicDragActivity" />
        <activity android:name=".ui.drag.CustomDragActivity" />
        <activity android:name=".ui.adapter.SelectAdapterActivity" />
        <activity android:name=".ui.sticky.Sticky1SampleActivity" />
        <activity android:name=".ui.sticky.Sticky2SampleActivity" />
        <activity android:name=".ui.sticky.Sticky3SampleActivity" />
        <activity android:name=".ui.sticky.Sticky4SampleActivity" />
        <activity android:name=".ui.sticky.Sticky5SampleActivity" />
        <activity android:name="cz.kotlinwidget.ui.NewViewPagerListActivity" />
        <activity android:name=".ui.layoutmanager.VerticalLayoutActivity" />
        <activity android:name=".ui.layoutmanager.HorizontalLayoutActivity" />
        <activity android:name=".ui.layoutmanager.WheelDateActivity" />
        <activity android:name=".ui.layoutmanager.GalleryActivity" />
        <activity android:name=".ui.layoutmanager.TableActivity" />
        <activity android:name=".ui.layoutmanager.ViewPagerActivity" />
        <activity android:name=".ui.adapter.IndicatorListActivity"
            android:windowSoftInputMode="adjustNothing"></activity>
    </application>

</manifest>